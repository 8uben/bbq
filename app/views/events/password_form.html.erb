<h1><%= t('headers.pincode_form')%></h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class="form-group mb-2">
    <%= label :pincode, t('activerecord.attributes.event.pincode') %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>

  <div class="actions">
    <%= submit_tag t('buttons.send'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to t('buttons.root'), events_path %>
