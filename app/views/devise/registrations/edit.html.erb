<div class="col-md-6">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group mb-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field form-group mb-2">
      <%= f.label :password %> <i>(<%= t('labels_form.leave_blank') %>)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> <%= t('labels_form.min_characters') %></em>
      <% end %>
    </div>

    <div class="field form-group mb-2">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field form-group mb-2">
      <%= f.label :current_password %> <i>(<%= t('labels_form.current_password') %>)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="actions mb-2">
      <%= f.submit t('buttons.update'), class: "btn btn-primary" %>
    </div>
  <% end %>

  <h3><%= t('buttons.cancel_my_account') %></h3>

  <p><%= t('unhappy') %></p>

  <%= button_to t('buttons.cancel_my_account'), registration_path(resource_name),
    data: { confirm: t('confirm.are_you_sure') },
    method: :delete, class: "btn btn-danger" %>

  <%= link_to t('buttons.back'), :back, class: "text-decoration-none" %>
</div>
